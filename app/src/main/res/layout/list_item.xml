<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/merchandiseImage"
            android:layout_width="48dp"
            android:layout_height="100dp"
            android:layout_margin="6dp"
            android:layout_weight="0.34"
            android:paddingTop="6dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:padding="6dp"
                android:textSize="16dp"
                android:textStyle="italic"
                android:textColor="#0277BD"
                android:text="Name of Book"/>
            
            <TextView
                android:id="@+id/supplier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Book Author"
                android:textColor="#E65100"/>

            <TextView
                android:id="@+id/current_inventory_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:textColor="#26A69A"
                android:textSize="14dp"
                android:text="Current Inventory"/>
            
            <ImageView
                android:id="@+id/emailPlaceOrder"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_email_black_48dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/shoppingBasket"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_shopping_basket_black_36dp"/>

    </LinearLayout>
</LinearLayout>